<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head", { title: "Edit Store" }) %>
<body class="bg-gray-100 flex relative flex-col h-dvh w-screen max-w-screen lg:flex-row">
  <%- include("../partials/nav", { active: "stores" }) %>
  <main class="w-full  h-full relative flex flex-col items-start justify-start gap-5 lg:gap-8 overflow-x-hidden overflow-y-auto ">
    <section id="main-header" class="w-full bg-white h-fit flex flex-col items-start justify-start pt-5 lg:pt-8 ">
      <div class="container gap-4 lg:gap-5 px-4 md:px-8 h-fit flex flex-col ">
        <div id="breadcrumbs" class="flex items-center gap-2 h-fit">
          <a href="/" class="text-xs lg:text-sm text-gray-500 hover:text-gray-900">Home</a>
          <span class="text-xs lg:text-sm text-gray-500">&gt;</span>
          <a href="/stores" class="text-xs lg:text-sm text-gray-500 hover:text-gray-900">Stores</a>
          <span class="text-xs lg:text-sm text-gray-500">&gt;</span>
          <span class="text-xs lg:text-sm text-gray-900 font-medium">Edit Store</span>
        </div>
        <%- include("../partials/mainTitle", { title: "Edit Store", subtitle: "Edit a store here" }) %>
      </div>
    </section>

    <section id="productForm" class="w-full max-w-4xl h-fit flex flex-col items-start justify-start ">
      <div class="w-full h-fit flex flex-col px-4 md:px-8">
        <form action="/stores/edit/<%= store.id %>" method="post" id="addStoreForm" novalidate class=" @container w-full h-full flex flex-col py-4">
            <input type="hidden" id="editPassword<%= store.id %>" name="editPassword">
            <div class="content h-fit flex flex-col @[400px]:grid  @[400px]:grid-cols-2 gap-x-10 gap-y-6 md:gap-y-8 mb-8">
                <label for="storeName" class="w-full h-fit flex flex-col items-start justify-start text-gray-700">Store Name
                    <input required placeholder="Store Name" type="text" value="<%= store.name %>" id="storeName" name="storeName" class="w-full h-fit text-gray-700 border border-gray-300 rounded-md px-[0.875em] py-[0.625em] text-gray-500 mt-1 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <span class="error" id="storeNameError" aria-live="polite"></span>
                </label>
                <label for="storeLocation" class="w-full h-fit flex flex-col items-start justify-start text-gray-700">Store Location
                    <input required placeholder="Enter Store Location" type="address"  value="<%= store.location %>" id="storeLocation" name="storeLocation" class="w-full h-fit text-gray-700 border border-gray-300 rounded-md px-[0.875em] py-[0.625em] text-gray-500 mt-1 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <span class="error" id="storeLocationError" aria-live="polite"></span>
                </label>
                <label for="storePhone" class="w-full h-fit flex flex-col items-start justify-start text-gray-700">Store Phone
                    <input placeholder="Enter Store Phone" value="<%= store.phone %>" type="tel" minlength="10" maxlength="10" id="storePhone" name="storePhone" class="w-full h-fit text-gray-700 border border-gray-300 rounded-md px-[0.875em] py-[0.625em] text-gray-500 mt-1 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <span class="error" id="storePhoneError" aria-live="polite"></span>
                </label>
                <label for="storeEmail" class="w-full h-fit flex flex-col items-start justify-start text-gray-700">Store Email
                    <input required placeholder="Enter Store Email" type="email" value="<%= store.email %>" id="storeEmail" name="storeEmail" class="w-full h-fit text-gray-700 border border-gray-300 rounded-md px-[0.875em] py-[0.625em] text-gray-500 mt-1 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <span class="error" id="storeEmailError" aria-live="polite"></span>
                </label>
            </div>
            <div class="content h-fit flex flex-col @[400px]:grid  @[400px]:grid-cols-2 gap-4">
                <!-- cancel button -->
                <a href="/stores" class="bg-white text-gray-500 px-3 py-[0.625em] rounded-lg border flex justify-center items-center border-gray-200 text-sm text-nowrap text-center hover:bg-gray-100">
                Cancel
                </a>
                <!-- add product button -->
                <button type="submit"    id="addStoreButton" onclick="return collectPassword(event, 'editPassword<%= store.id %>')" class="bg-indigo-500 text-white px-3 py-[0.625em] rounded-lg border flex justify-center items-center border-gray-200 text-sm text-nowrap text-center hover:bg-indigo-600">
                Update Store
               </button>
            </div>
        </form>
      </div>
    </section>

    
  </main>
  
  <script src="/js/collectPassword.js"></script>
  <script src="/js/validateStoreForm.js"></script>
</body>
</html>
